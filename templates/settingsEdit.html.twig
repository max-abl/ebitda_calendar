{% extends 'content.html.twig' %}

{% block title %}{{ parent() }} - Settings{% endblock %}

{% block content %}
    <div class="offset-lg-3 col-lg-6 text-neutral">
        <h4 class="font-weight-bold">EDIT PROFILE</h4>

        {{ form_start(form) }}
        {{ form_row(form.username, { 'attr': {'autocomplete': 'off'} }) }}
        {{ form_row(form.position, { 'attr': {'autocomplete': 'off'} }) }}

        <button class="btn btn-sm btn-info">Save</button>
        <a class="btn btn-sm btn-default" href="{{ path('app_settings_index') }}">Back</a>
        {{ form_end(form) }}
    </div>

{% endblock %}

