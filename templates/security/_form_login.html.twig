<form class="offset-lg-3 col-lg-6" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h4 class="font-weight-bold mb-3">SIGN IN</h4>

    <div class="mt-3">
        <label for="inputUsername" class="sr-only">Username</label>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control"
               placeholder="Username" autocomplete="off" required autofocus/>
    </div>

    <div class="mt-3">
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">


    <div class="checkbox mt-3">
        <label>
            <input type="checkbox" name="_remember_me"><span class="text-light ml-2">Remember me</span>
        </label>
    </div>


    <button class="btn btn-sm btn-primary mt-3" type="submit">
        Sign in
    </button>
</form>