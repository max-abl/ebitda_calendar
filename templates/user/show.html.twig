{% extends 'content.html.twig' %}

{% block title %}User{% endblock %}

{% block content %}
    <h4 class="font-weight-bold">USER #{{ user.id }}</h4>

    <table class="table text-neutral">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{% for role in user.roles %}<span class="badge badge-default mr-1">{{ role }}</span>{% endfor %}</td>
        </tr>
        <tr>
            <th>Position</th>
            <td>{{ user.position }}</td>
        </tr>
        </tbody>
    </table>

    <a class="badge badge-default" href="{{ path('admin_user_index') }}">back to list</a>

    <a class="badge badge-info" href="{{ path('admin_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
