{% extends 'base.html.twig' %}

{% block body %}
    <nav class="navbar navbar-expand-lg bg-dark mb-5">
        <div class="container">
            <div class="navbar-translate">
                <a class="navbar-brand" href="{{ path('app_index') }}">
                    <img src="{{ asset('img/logo_fc_ebitda.png') }}" width="50" height="50"
                         class="d-inline-block align-middle" alt="">
                </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    {% if current_user is defined %}
                        <li class="nav-item active">
                            <a href="{{ path('app_index') }}" class="nav-link"><b>FC EBITDA</b></a>
                        </li>
                        <li class="nav-item active">
                            <a href="{{ path('app_settings_index') }}" class="nav-link"><b>Settings</b></a>
                        </li>
                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                            <li class="nav-item active">
                                <a href="{{ path('admin_user_index') }}" class="nav-link"><b>Admin</b></a>
                            </li>
                        {% endif %}
                        <li class="nav-item active">
                            <a href="{{ path('app_security_logout') }}" class="nav-link"><b>Logout</b></a>
                        </li>
                    {% else %}
                        <li class="nav-item active">
                            <a href="{{ path('app_security_login') }}" class="nav-link text-primary"><b>Sign in</b></a>
                        </li>
                        <li class="nav-item active">
                            <a href="{{ path('app_security_register') }}" class="nav-link text-neutral"><b>Sign
                                    up</b></a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        {% block content %}
        {% endblock %}
    </div>
    <footer class="container mt-5 text-center">
        <div class="row">
            <div class="offset-3 col-6 border-top border-default p-3">
                Made with <3 by <a href="https://twitter.com/max0ble">@max0ble</a>
            </div>
        </div>

    </footer>
{% endblock %}